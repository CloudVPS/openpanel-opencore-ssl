#!/usr/bin/make -f


BUILD_ROOT=$(CURDIR)/debian/tmp
install:
trm -rf ${BUILD_ROOT}
tmkdir -p ${BUILD_ROOT}/var/opencore/bin
tmkdir -p ${BUILD_ROOT}/etc/openpanel
tmkdir -p ${BUILD_ROOT}/etc/init.d
tinstall -m 755 opencore-ssl ${BUILD_ROOT}/var/opencore/bin
tchmod 600 ${BUILD_ROOT}/etc/openpanel
tinstall -m 755 init.debian ${BUILD_ROOT}/etc/init.d/openpanel-ssl

build:
tmake
binary-indep:

binary-arch binary: build install
	if [ -d debian/tmp ] ; then dh_install -a --sourcedir=debian/tmp ; fi
	dh_installdocs -a
	dh_installdeb -a
	dh_compress -a
	dh_fixperms -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

.PHONY: build binary binary-arch binary-indep clean install
